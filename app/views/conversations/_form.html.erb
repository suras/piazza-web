<%# locals: (message:, conversation:)  -%>

<%= form_with(model: message, url: conversation_messages_path(conversation),
class: "p-4", id: dom_id(conversation, :form)
) do |f| %>
<form-field class="field">
<%= f.text_area :body, class: "textarea has-fixed-size" %>
</form-field>
<layout-group class="buttons is-right mt-4">
<%= f.submit t(".send"), class: "button is-primary" %>
</layout-group>
<% end %>